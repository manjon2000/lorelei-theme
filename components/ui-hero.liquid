<div class="manjon-product-featured">
  <h3 class="manjon-product-featured-title">{{ section.settings.text_id }}</h3>

      <picture class="manjon-product-featured__picture">
      <img
        loading="lazy"
        class="manjon-product-featured__picture-img"
        src="https://www.cremedelamer.com/media/export/cms/NAAGENCY-3882/25092%20July%20TOAv2_720x860_HP_DT.jpg"
        alt="PICTURE"
      >
    </picture>
  {% for block in section.blocks limit: 1 %}
    {% case block.type %}
      {% when 'card_hero' %}
        <div class="manjon-product-featured__category">
          <h3 class="manjon-product-featured__category-title">
            {{ block.settings.card_hero_title_id }}
          </h3>
          <p class="manjon-product-featured__category-text">
            {{ block.settings.card_hero_text_id }}
          </p>
          <a
            class="manjon-product-featured__category-link"
            href="{{block.settings.card_hero_link_id}}"
          >
            {{ block.settings.card_hero_link_text_id }}
          </a>
        </div>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "hero",
  "settings": [
    {
      "type": "text",
      "id": "text_id",
      "label": "Title section",
      "default": "Lorelei"
    },
    {
      "type": "image_picker",
      "id": "image_id",
      "label": "Image section"
    }
  ],
  "blocks": [
    {
      "type": "card_hero",
      "name": "card_hero_id",
      "settings": [
        {
          "id": "card_hero_title_id",
          "type": "text",
          "label": "Title Card",
          "default": "Mini gifts to glow"
        },
        {
          "id": "card_hero_text_id",
          "type": "text",
          "label": "Paragraph Card",
          "default": "Embrace summer weather with a healing hydrating gift. Receive a 4-piece mini regimen and La Mer cosmetic bag with any eligible $375 purchase. Enter code: GLOWUP"
        },
        {
          "id": "card_hero_link_text_id",
          "type": "text",
          "label": "Paragraph link",
          "default": "Shop now"
        },
        {
          "id": "card_hero_link_id",
          "type": "text",
          "label": "Link url",
          "default": "Shop now"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

{% style %}
  /* PRODUCTS FEATURED HOME */
  .manjon-product-featured {
    max-width: 1280px;
    margin: 0 auto;
    padding: 1rem;
    position: relative;
    display: grid;
    gap: 1rem;
    align-items: center;
    grid-template-columns: repeat(4, 1fr);
  }
  @media (min-width: 768px) {
    .manjon-product-featured {
      grid-template-columns: repeat(8, 1fr);
      grid-auto-rows: auto;
    }
  }
  .manjon-product-featured-title {
    color: #666;
    font-size: 7rem;
    margin: 0;
    grid-column: 1/6;
  }
  @media (min-width: 768px) {
    .manjon-product-featured-title {
      grid-row: 2/2;
      align-self: flex-end;
    }
  }
  @media (min-width: 1280px) {
    .manjon-product-featured-title {
      font-size: 12rem;
      line-height: 124px;
    }
  }
  .manjon-product-featured__picture {
    width: 100%;
    height: 100%;
    grid-column: 1/6;
    grid-row: 2/2;
    aspect-ratio: 4/5;
  }
  @media (min-width: 768px) {
    .manjon-product-featured__picture {
      grid-column: 5/9;
      grid-row: 1/3;
    }
  }
  .manjon-product-featured__picture-img {
    width: 100%;
    height: 100%;
    -o-object-fit: cover;
    object-fit: cover;
    -o-object-position: center;
    object-position: center;
  }
  .manjon-product-featured__category {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    grid-column: 1/6;
    grid-row: 3/3;
  }
  @media (min-width: 768px) {
    .manjon-product-featured__category {
      grid-column: 1/5;
      grid-row: 1/1;
    }
  }
  @media (min-width: 1024px) {
    .manjon-product-featured__category {
      grid-column: 1/3;
      align-self: flex-start;
    }
  }
  .manjon-product-featured__category-title {
    font-family: 'Recline Bold';
    font-size: calc(42px + 10 * (100vw - 320px) / 1120);
    letter-spacing: -0.05em;
    line-height: 1;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-transform: uppercase;
    color: #1b1b1b;
    margin: 0;
    text-transform: uppercase;
  }
  .manjon-product-featured__category-text {
    font-family: "Public Sans";
    font-size: calc(12px + 1 * (100vw - 320px) / 1120);
    line-height: 1.5;
    letter-spacing: 0.01em;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    font-weight: 400;
    color: #1b1b1b;
    margin: 0;
  }
  .manjon-product-featured__category-link {
    width: -moz-fit-content;
    width: fit-content;
    position: relative;
    font-family: 'Recline Regular';
    font-size: small;
    color: #818f96;
    text-decoration: none;
  }
  .manjon-product-featured__category-link::before {
    content: '';
    width: 100%;
    height: 1px;
    position: absolute;
    bottom: -3px;
    right: 0;
    margin: 0;
    background-color: #818f96;
  }
  @media (min-width: 1024px) {
    .manjon-product-featured__category-link::before {
      width: 0%;
      transition: all ease-in-out 0.25s;
    }
  }
  @media (min-width: 1024px) {
    .manjon-product-featured__category-link:hover::before {
      width: 100%;
      right: unset;
      left: 0;
    }
  }

  .uppercase {
    text-transform: uppercase;
    line-height: 100%;
  }
{% endstyle %}
